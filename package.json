{
  "name": "exception.js",
  "version": "2.0.0",
  "description": "Javascript exception class with ts for both server-side and clients",
  "main": "lib/index.js",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./es/index.js",
      "types": "./src/index.ts"
    },
    "./*": {
      "require": "./lib/*",
      "import": "./es/*",
      "types": "./src/*"
    }
  },
  "types": "src/index.ts",
  "scripts": {
    "clean": "rm -rf lib es",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "build": "tsc -p tsconfig.json --target es5 && tsc -p tsconfig.json --module esnext --outDir es",
    "test": "mocha -r ts-node/register ./test/**/*.test.ts"
  },
  "files": [
    "lib",
    "es",
    "src",
    "index.js",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yeliex/exception-js.git"
  },
  "keywords": [
    "exception",
    "error"
  ],
  "author": "yeliex <yeliex@yeliex.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yeliex/exception-js/issues"
  },
  "homepage": "https://github.com/yeliex/exception-js#readme",
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.0",
    "@types/power-assert": "^1.5.8",
    "mocha": "^10.2.0",
    "power-assert": "^1.6.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "http-status": "^1.6.2"
  }
}
