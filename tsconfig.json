{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": [
      "esnext"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "typeRoots": [
      "typing",
      "node_modules/@types"
    ],
    "rootDir": "src",
    "outDir": "lib"
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}
